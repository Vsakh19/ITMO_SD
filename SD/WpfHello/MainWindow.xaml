<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Background="LightGray">
        <Button x:Name="Button1" Content="Input Name" Height="30" Width="100" Click="Button1_Click" Canvas.Left="0" Canvas.Top="50"/>
        <Button x:Name="Button2" Content="Output Name"  Height="30" Width="100" Click="Button2_Click" Canvas.Left="0" Canvas.Top="100"/>
        <Button Canvas.Left="0" Canvas.Top="10" Content="Get Date" Height="30" Name="button3" Width="100" Click="button3_Click"/>
        <TextBox x:Name="TextBox" TextWrapping="Wrap" Width="170" Height="30" TextChanged="TextBox_TextChanged" Canvas.Left="150" Canvas.Top="50"/>
        <Label x:Name="Label" Content="" HorizontalAlignment="Left" Margin="375,186,0,0" VerticalAlignment="Top" Height="26"/>
        <TextBox Name="MyTextBox" Canvas.Left="150" Canvas.Top="10" Height="30" Width="170"/>
    </Canvas>
</Window>
