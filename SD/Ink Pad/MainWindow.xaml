<Window x:Class="Ink_Pad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ink_Pad"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="350">
    <Grid Background="Yellow">
        <InkCanvas x:Name="inkCanvas1" Margin="0,0,0,162" Background="Black">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="white" Width="5" />
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <Button x:Name="button1" Content="Clear" HorizontalAlignment="Left" Margin="66,405,0,0" VerticalAlignment="Top" Width="75" Click="button1_Click"/>
        <Button x:Name="button2" Content="Close" HorizontalAlignment="Left" Margin="206,405,0,0" VerticalAlignment="Top" Width="75" Click="button2_Click"/>

    </Grid>
</Window>
